# =========================
# Project: star (.env)
# =========================

# App 기본
APP_NAME=star
APP_ENV=development
TZ=Asia/Seoul

# Security (샘플 값: 실제 배포 전 교체 필수)
SECRET_KEY=please_change_me_32+chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=14

# Postgres (DB 이름 고정: appdb)
POSTGRES_USER=appuser
POSTGRES_PASSWORD=apppass
POSTGRES_DB=appdb
DATABASE_URL=postgresql+psycopg://appuser:apppass@db:5432/appdb

# Uvicorn
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8000
UVICORN_RELOAD=false

# CORS (쉼표로 여러 도메인)
CORS_ALLOW_ORIGINS=*

# Logging
LOG_LEVEL=INFO
