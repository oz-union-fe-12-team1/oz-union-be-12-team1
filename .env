# =========================
# Project: star (.env)
# =========================

# App
APP_NAME=star
APP_ENV=development
TZ=Asia/Seoul

# Security (샘플: 배포 전 교체!)
SECRET_KEY=please_change_me_32+chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=14

# Postgres (DB 이름은 고정: appdb)
POSTGRES_USER=appuser
POSTGRES_PASSWORD=apppass
POSTGRES_DB=appdb
# 컨테이너 간 통신은 호스트명 'db' 사용
DATABASE_URL=postgresql+psycopg://appuser:apppass@db:5432/appdb

# Uvicorn
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8000
UVICORN_RELOAD=false

# CORS
CORS_ALLOW_ORIGINS=*

# Logging
LOG_LEVEL=INFO
