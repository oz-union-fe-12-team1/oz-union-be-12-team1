# =========================
# Project: star (.env)
# =========================

# App
APP_NAME=star
APP_ENV=development
TZ=Asia/Seoul

# Security (샘플: 배포 전 교체!)
SECRET_KEY=your-secret-key-here-please-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Postgres (DB 이름은 고정: appdb)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres
# 컨테이너 간 통신은 호스트명 'db' 사용
DATABASE_URL=postgres://postgres:postgres@db:5432/postgres

# Uvicorn
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8000
UVICORN_RELOAD=true

# CORS
CORS_ALLOW_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO

# ==============================
# Google 서비스 계정 (서비스 계정 키 JSON 파일 경로)
# ==============================
GOOGLE_CREDENTIALS_FILE=google-credentials.json
GOOGLE_SPREADSHEET_ID=your-google-spreadsheet-id-here
GOOGLE_SHEET_NAME=quiz

# ==============================
# API Keys (보안 주의: 실제 키는 .env 파일에만!)
# ==============================
GEMINI_API_KEY=your-gemini-api-key-here
OPENWEATHER_API_KEY=your-openweather-api-key-here

# ==============================
# 앱 환경 설정
# ==============================
PYTHONUNBUFFERED=1